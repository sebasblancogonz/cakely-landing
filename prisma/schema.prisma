generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum BlogCategory {
  GESTION
  FINANZAS
  RECETAS
  MARKETING
  PRODUCTIVIDAD
  TENDENCIAS
  CASOS_ESTUDIO
}

model BlogPost {
  id          String        @id @default(cuid())
  title       String
  slug        String        @unique
  content     String        @db.Text
  excerpt     String?       @db.Text
  coverImage  String?
  category    BlogCategory?
  published   Boolean       @default(false)
  publishedAt DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([slug])
  @@index([published])
  @@index([publishedAt])
  @@index([category])
}
